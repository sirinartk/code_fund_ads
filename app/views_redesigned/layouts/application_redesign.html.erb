<!DOCTYPE html>
<html>
  <head>
    <title><%= @title || "CodeFund ❤️ Open Source" %></title>
    <%= ga_tag_manager_header %>

    <!-- Meta Tags -->
    <%= display_meta_tags site: "CodeFund" %>
    <link rel="manifest" href="/site.webmanifest">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>

    <link rel="stylesheet" href="/css/all.min.css">

    <!-- Compressed Stylesheets -->
    <%= stylesheet_pack_tag 'code_fund_redesign', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- Compressed JavaScripts -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'code_fund_redesign', 'data-turbolinks-track': 'reload' %>

    <% if @kendo %>
      <!-- Kendo -->
      <%= stylesheet_pack_tag 'code_fund_kendo', media: 'all', 'data-turbolinks-track': 'reload' %>
      <script src="//kendo.cdn.telerik.com/2019.2.619/js/kendo.all.min.js"></script>
    <% end %>
  </head>
  <body>
    <%= render 'shared/header' %>
    <h1>Hello from redesign</h1>
    <%= yield %>
    <%= render 'shared/footer' %>

    <!-- Target for dynamically generated modals -->
    <div id="global-modal" class="modal fade"></div>
  </body>
</html>
